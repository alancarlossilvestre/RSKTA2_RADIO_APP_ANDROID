<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tu toolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="?attr/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <!-- TÃ­tulo -->
                        <!-- TÃ­tulo -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Perfil de usuario"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:textSize="16sp" />

                        <!-- BotÃ³n a la derecha -->
                        <ImageButton
                            android:id="@+id/btn_edit_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_edit_data"
                            android:background="@null"
                            android:layout_marginRight="5dp"
                            android:contentDescription="Editar perfil" />

                    </LinearLayout>

                    <!-- Imagen de perfil -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profile_image_view"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_default_profile"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="5dp"
                            android:padding="2dp" />

                        <TextView
                            android:id="@+id/viewNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del usuario"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Campos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:textSize="14dp"
                            android:text="Nombre"
                            android:fontFamily="@font/poppins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/viewName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre de usuario"
                            android:enabled="false"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/item_profile_input"
                            android:background="@drawable/border_profile_item"
                            android:padding="8dp"
                            />


                        <TextView
                            android:text="E-mail"
                            android:textSize="14dp"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/viewtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="xxxxxx@gmail.com"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:textSize="14dp"
                            android:textColor="@color/item_profile_input"
                            android:background="@drawable/border_profile_item"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Edad"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="15dp"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/etedad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="xx"
                            android:inputType="number"
                            android:enabled="false"
                            android:textSize="12dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:background="@drawable/border_profile_item"
                            android:textColor="@color/item_profile_input"
                            android:padding="8dp"/>

                        <TextView
                            android:text="Frase bÃ­blica favorita"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="15dp"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/viewVerse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_marginTop="10dp"
                            android:text="tienes un versÃ­culo bÃ­bico favorito? ðŸ§"
                            android:textColor="@color/item_profile_input"
                            android:background="@drawable/border_profile_item"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/btn_save_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_border_save_data"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="10dp"
                            android:layout_marginBottom="56dp"
                            android:clickable="true"
                            android:layout_marginTop="16dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="false"
                                android:focusable="false"
                                android:padding="4dp"
                                android:src="@drawable/save_data" />

                            <Space
                                android:layout_width="2dp"
                                android:layout_height="1dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Guardar Datos"
                                android:paddingRight="7dp"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>
