<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">


    <!-- PARTE SUPERIOR: Layout con botón de reproducción (sin CardView) -->
    <LinearLayout
        android:id="@+id/layoutReproducir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        android:background="@drawable/btn_border"> <!-- Puedes usar un drawable si quieres esquinas redondeadas -->

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presiona Reproducir"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnPlayStream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reproducir" />
    </LinearLayout>

    <!-- PARTE INFERIOR: Login + Comentarios -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutReproducir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/google_sign_in_button_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_border"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/google"
                            android:contentDescription="Google logo" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Continuar con Google"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/facebook_sign_in_button_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_border"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/facebook"
                            android:contentDescription="Facebook logo" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Continuar con Facebook"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cerrar sesión"
                        android:visibility="gone" />
                </LinearLayout>

            <!-- Fragmento de comentarios -->
            <FrameLayout
                android:id="@+id/comments_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:visibility="gone"
                android:layout_marginBottom="32dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
