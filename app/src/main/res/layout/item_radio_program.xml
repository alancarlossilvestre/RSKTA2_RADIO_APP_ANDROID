<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:background="@drawable/item_background_program_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorPrimary">

        <!-- Imagen superior -->
        <ImageView
            android:id="@+id/img_program"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            />

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del programa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Es un hecho establecido que un lector se distraerá con el contenido legible de una página."
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Horario -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/date_time"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="8dp"
                android:text="Lunes a viernes de 6:00 a.m. a 7:00 a.m."
                android:textColor="@color/data_time_program"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="4dp"
                android:ellipsize="none"
                android:singleLine="false"
                android:breakStrategy="simple"
                android:scrollHorizontally="false" />
        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
