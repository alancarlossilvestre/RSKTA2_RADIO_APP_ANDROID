<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="165dp"
    android:layout_height="185dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="13dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="2dp"
    >

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/item_background"
android:paddingLeft="10dp">

    <TextView
        android:id="@+id/program_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:text="Nombre del Programa nÃºmero 1"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/program_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins"
        android:text="un espacio entre amigos y mucho mas"
        android:textColor="#000000"
        android:textSize="7sp"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/program_name"
        app:layout_constrainedWidth="true"/>


    <TextView
    android:id="@+id/horus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="de 21:00 a 23:00"
    android:textColor="#000000"
    android:textSize="8sp"
    android:textStyle="bold"
    android:fontFamily="@font/poppins"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="25dp"
    android:layout_marginStart="23dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
